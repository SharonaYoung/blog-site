---
title: Homepage
layout: 'base.njk'
---
<!-- hero -->
<section class="hero">
  <div class="container flow">
    <div class="hero__content flow">
      <h1 class="section-title">Welcome To My Cat Blog!</h1>
      <p>This is a place of kitty tales, a perfect fit for cat lovers.</p>
      <p>
        Below are some generated cat ipsum lines, or visit the blog page
        to read cat shenanigans!
      </p>
      <div class="flex-group">
        <a href="#featured-articles" class="btn btn--primary"
          >Featured Articles</a
        >
        <a href="./blog" class="btn btn--neutral">Recent Articles</a>
      </div>
    </div>
    <div>
      <img
        src="./assets/blog/home.jpg"
        alt="cat"
        class="hero__image"
      />
    </div>
  </div>
</section>
<!-- featured articles -->
<section id="featured-articles" class="featured-articles">
  <div class="container flow">
    <h2 class="section-title txt-ctr">Featured Articles</h2>
    <p class="txt-ctr">Here are some sample articles of kitty mayhem.</p>
    <ul role="list" class="articles__list flow">
      {%- for post in collections.featured | reverse -%}
       {% include 'article-snippet.njk' %}
      {%- endfor %}
    </ul>
  </div>
</section>
<!-- past projects -->
<section id="featured-projects" class="featured-projects">
  <div class="container flow">
    <h2 class="section-title txt-ctr">Recent Projects</h2>
    <p>Most recent client projects</p>
    <ul role="list" class="projects__list">
      {% for project in collections.projects.featured %}
        {% include "project-card.njk" %}
      {% endfor %}
    </ul>
  </div>
</section>